<%= f.label :name, class:"form__items form__items--label" %>
<%= f.text_field :name, style:"font-family:FontAwesome", class:"form__items form__items--input", placeholder:"\uF007 ユーザー名" %>

<%= f.label :email, class:"form__items form__items--label" %>
<%= f.email_field :email, style:"font-family:FontAwesome", class:"form__items form__items--input", placeholder:"\uF0e0 メールアドレス" %>

<%= f.label :password, class:"form__items form__items--label" %>
<%= f.password_field :password, style:"font-family:FontAwesome", class:"form__items form__items--input", placeholder:"\uF023 パスワード" %>

<%= f.label :password_confirmation, class:"form__items form__items--label" %>
<%= f.password_field :password_confirmation, style:"font-family:FontAwesome", class:"form__items form__items--input", placeholder:"\uF023 パスワード（確認用）" %>

<%= f.submit '登録', class:"form__items form__items--submit" %>